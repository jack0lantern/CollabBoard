# Firebase (get from Firebase Console > Project Settings)
# Client (browser) - use NEXT_PUBLIC_ prefix so vars are available in browser
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# E2E test credentials (used by Playwright tests)
E2E_TEST_EMAIL=
E2E_TEST_PASSWORD=

# Optional explicit aliases for user 1
E2E_TEST_EMAIL_1=
E2E_TEST_PASSWORD_1=

# Required for true multi-user tests
E2E_TEST_EMAIL_2=
E2E_TEST_PASSWORD_2=

