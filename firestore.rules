rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /boards/{boardId} {
      // Users can read boards they own
      allow read: if request.auth != null && resource.data.owner_id == request.auth.uid;
      // Users can create boards with themselves as owner
      allow create: if request.auth != null && request.resource.data.owner_id == request.auth.uid;
      // Users can update/delete only their own boards
      allow update, delete: if request.auth != null && resource.data.owner_id == request.auth.uid;

      // Canvas objects subcollection - authenticated users with board access
      match /objects/{objectId} {
        allow read, write: if request.auth != null;
      }

      // Presence subcollection - read all, write only own doc
      match /presence/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
